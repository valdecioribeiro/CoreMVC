@model IEnumerable<CoreMVC.Models.RegistroVenda>
@{
    ViewData["Title"] = "Procura Simples";
}

<h2>@ViewData["Title"]</h2>


<nav class="navbar">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                    <input type="date" name="minDate" class="form-control" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Max Date</label>                        
                    <input type="date" name="maxDate" class="form-control" value=@ViewData["maxDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filtro</button>                    
        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total de vendas = @Model.Sum(obj => obj.Quantidade).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vendedor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vendedor.Departamento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantidade)

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelVendedor => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelVendedor => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelVendedor => item.Vendedor.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelVendedor => item.Vendedor.Departamento.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelVendedor => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelVendedor => item.Status)
                    </td>
                </tr>
                }

            </tbody>
        </table>

    </div>
</div>