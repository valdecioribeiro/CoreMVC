@model CoreMVC.Models.Vendedor
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Nome" class="custom-control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="custom-control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nascimento" class="custom-control-label"></label>
                <input asp-for="Nascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SalarioBase" class="custom-control-label"></label>
                <input asp-for="SalarioBase" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>