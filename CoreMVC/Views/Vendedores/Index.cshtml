@model IEnumerable<CoreMVC.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedores";
}
<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn">Criar novo</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vendedor in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelVendedor => vendedor.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelVendedor => vendedor.Email)
            </td>
            <td>
                @Html.DisplayFor(modelVendedor => vendedor.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelVendedor => vendedor.SalarioBase)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@vendedor.Id">Edit</a> |
                <a asp-action="Detail" asp-route-id="@vendedor.Id">Detail</a> |
                <a asp-action="Delete" asp-route-id="@vendedor.Id">Delete</a>
            </td>
        </tr>
        }

    </tbody>
</table>
